<div class="row" style="margin-top:5px;">
  <div class="col-md-6 col-md-offset-3">
    <div class="card card-body">
      <h1 class="text-center">
        <i class="fa fa-plus-square-o "></i> Register Part
      </h1>
      <% include ../partials/messages %>
      <form action="/manufacturer/create_request" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Part Name</label>
          <input type="string" id="part_name" name="part_name" class="form-control" placeholder="Enter Part Name" value="<%= typeof part_name != 'undefined' ? part_name : '' %>"
            required />
        </div>
        <div class="form-group">
          <label for="name">Part Number</label>
          <input type="string" id="part_number" name="part_number" class="form-control" placeholder="Enter Part Number"
            value="<%= typeof part_number != 'undefined' ? part_number : '' %>" required />
        </div>
        <div class="form-group">
          <label for="supplier_name">Supplier Name</label>
          <input type="string" id="supplier_name" name="supplier_name" class="form-control" placeholder="Enter Supplier Name"
            value="<%= typeof supplier_name != 'undefined' ? supplier_name : '' %>" required />
        </div>
        <div class="form-group">
          <label for="supplier_email">Supplier Email</label>
          <input type="email" id="supplier_email" name="supplier_email" class="form-control" placeholder="Enter Supplier Email"
            value="<%= typeof supplier_email != 'undefined' ? supplier_email : '' %>" required />
        </div>
        <div class="form-group">
          <label for="supplier_address">Supplier Address</label>
          <input type="string" id="address" name="supplier_address" class="form-control" placeholder="Supplier Address"
            value="<%= typeof supplier_address != 'undefined' ? supplier_address : '' %>" required />
        </div>
        <div class="form-group">
          <label for="supplier_mobile">Supplier Mobile</label>
          <input type="string" id="mobile" name="supplier_mobile" class="form-control" placeholder="Mobile" value="<%= typeof supplier_mobile != 'undefined' ? supplier_mobile : '' %>" />
        </div>
        <div class="form-group">
          <label for="manufacturer_attachments">Attachments</label>
          <input type="file" 
          id="manufacturer_attachments" 
          name="manufacturer_attachments" 
          class="form-control" 
          placeholder="Attachments" 
          value="<%= typeof manufacturer_attachments != 'undefined' ? manufacturer_attachments : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>